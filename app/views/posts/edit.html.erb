<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">Edit Post</h4>
  </div>
  <div class="row justify-content-center">
 
    <%= form_with scope: :post, url: '/posts/confirm_update' , local: true do |form| %>
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, class: 'form-control' %>
      </div>
      <br>
      <div class="form-group">
        <%= form.submit "Confirm", class: 'form-control btn-success' %>
      </div>
    <% end %>
  </div>
</div>