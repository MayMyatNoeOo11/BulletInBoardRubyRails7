<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-6 mb-6 display-6">New Post</h4>
  </div>
  <div class="row justify-content-center">
    <%= form_with scope: :post, url: "/posts/confirm", local: true do |form| %>
      <div class="form-group">
        <%= form.label :title %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, class: 'form-control' %>
      </div>
      <br>
      <div class="form-group">
        <%= form.submit "Create", class: ' btn-success' %>
        <%= submit_tag("Clear", { :name => 'reset', :id => 'reset_button', :type => "reset", :class => 'btn-primary'}) %>

      </div>
      <br>
    <% end %>
  </div>
</div>