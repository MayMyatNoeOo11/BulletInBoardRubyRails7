<div class="container">
    <div class="row justify-content-md-center">
        <div class="row justify-content-center">
            <h4 class="mt-6 mb-6 display-6">Confirm Post</h4>
        </div>
        <div class="col-8">
            <%= form_with(model: @post, local: true) do |form| %>
                <div class="form-group">
                    <%= form.label :title %>
                    <%= form.text_field :title, :readonly => true, class: 'form-control' %>
                </div>
                <div class="form-group">
                    <%= form.label :description %>
                    <%= form.text_area :description, :readonly => true, class: 'form-control' %>
                </div>
                <br>
                <div class="form-group">
                     <%= form.submit "Confirm", class: 'btn btn-primary' %>
                     <%= link_to 'Back.', 'javascript:history.back()', :class => "btn btn-primary" %>

                </div>
                <%= hidden_field 'post', 'created_user_id' %>
                <%= hidden_field 'post', 'updated_user_id' %>
            <% end %>
        </div>
    </div>
</div>


