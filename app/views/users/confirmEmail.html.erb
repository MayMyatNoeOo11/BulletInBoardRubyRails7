<div class="container"> 
<h2>Email confirmation</h2><br>
<%= form_for @users, :url =>{:action => "forgetPassword", :email => @user} do |form| %>
<div class="form-group">
    <%= form.label :email %>
    <%= text_field :email, class: 'form-control' %>
</div>
<div class="form-group">
<label>Password:</label><br/>
<%= password_field_tag :password, params[:password] , class:'form-control' %>
</div><br>

<%= submit_tag "Continue", class:'btn btn-primary' %>
<%= link_to 'Back', login_path %>

<% end -%>
</div>