<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">User <%= @user.id %> Detail</h4>
  </div>
  <div class="row justify-content-center">
    <table class="table">
      <tbody>
        <tr>
          <th>Name:</th>
          <td><%= @user.name %></td>
        </tr>
        <tr>
          <th>Email:</th>
          <td><%= @user.email %></td>
        </tr>
        <tr>
          <th>Address:</th>
          <td><%= @user.address %></td>
       </tr>
       <tr>
        <th>Phone:</th>
        <td><%= @user.phone %></td>
      </tr>
      <tr>
        <th>Date of birth:</th>
        <td><%= @user.date_of_birth %></td>
      </tr>
      </tbody>
    </table>
    <%= button_to "Edit", edit_user_path(@user.id), method: :get, class:"btn-success mt-8"%>
  </div>
</div>