<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">Edit User</h4>
  </div>
  <div class="row justify-content-center">
  <%= form_with(model: @user, local: true) do |form| %>  
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :email %>
        <%= form.text_field :email, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :phone %>
        <%= form.text_field :phone, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :address %>
        <%= form.text_area :address, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :date_of_birth %>
        <%= form.date_field :date_of_birth, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.submit "Update", class: 'form-control btn-success' %>
      </div>
    <% end %>
  </div>
</div>